contract A

constructor()

creates
  uint x := 0


contract B

constructor(address<A> pa1, address p2, address<A> pa3, address p4)

iff
  address(pa1) != address(pa3)

creates
  A a := pa1
  uint y := 0
  address bu1 := p2
  address bu2 := p4


transition f(address<A> pa1)

iff
