contract C

constructor(address<A> pa1, address<A> pa2)

iff
  address(pa1) != address(pa2)

creates
  B b1 := new B(pa1, address(pa2), pa2, address(new A()))
  A a1 := new A()
  address cu1 := address(new A())
  address cu2 := address(new A())


transition f(address<A> pa1, address<A> pa2)

iff
  address(pa1) != address(pa2)
  address(pa1) != address(a1)
  address(pa2) != address(a1)
  address(pa1) != address(b1)
  address(pa2) != address(b1)
  address(pa1) != address(b1.a)
  address(pa2) != address(b1.a)

