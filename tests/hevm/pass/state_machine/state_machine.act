contract StateMachine

constructor()

iff

  CALLVALUE == 0

creates
  uint256 x := 0

invariants
    x <= 2

transition f()

iff

  x == 0
  CALLVALUE == 0

storage
    x := 1

transition g()

iff

  CALLVALUE == 0
  x == 1

  storage
    x := 2

transition h()

iff
  CALLVALUE == 0
  x == 2

  storage
    x := 0
