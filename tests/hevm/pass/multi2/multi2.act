contract A

constructor(uint z)

iff
   CALLVALUE == 0
   inRange(uint256, z + 1)

creates
   uint x := z + 1


transition x() : uint256

iff
   CALLVALUE == 0

storage
returns
   x

transition set_x(uint z)

iff
   CALLVALUE == 0

storage
  x := z

contract B

constructor(uint u)

iff
   CALLVALUE == 0
   inRange(uint256, u + 1)

creates
   uint y := 0
   A a := new A(u)
