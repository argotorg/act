contract SafeAdd

constructor ()
creates

transition add(uint256 x, uint256 y) : uint256

iff
    inRange(uint256, x+y)

updates
returns x + y

transition mul(uint256 x, uint256 y) : uint256

iff
    inRange(uint256, x*y)

updates
returns x * y

transition double(uint256 x) : uint256

iff
    inRange(uint256, 2*x)
    CALLVALUE == 0

updates
returns 2 * x
