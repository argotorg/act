contract A

constructor(uint x0)

iff
    CALLVALUE == 0

creates
    uint x := x0


transition getx() : uint256

iff

  CALLVALUE == 0

updates
returns x


transition setx(uint x1)

iff

  CALLVALUE == 0

updates
  x := x1


contract B

constructor(address<A> x, address<A> y)

iff
    CALLVALUE == 0
    x != y

creates
    A a1 := x
    A a2 := y


transition upd()

iff

  CALLVALUE == 0

updates
  a1.x := 42
  a2.x := 11
