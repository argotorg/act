contract A

constructor(uint z)

iff
   CALLVALUE == 0
   inRange(uint256, z + 1)

creates
   uint x := z + 1


transition x() : uint256

iff
   CALLVALUE == 0

updates
returns x

transition add_x(uint y)

iff
   CALLVALUE == 0
   inRange(uint256, x + y)

updates

  x := x + y


contract B

constructor(uint i)
iff
   CALLVALUE == 0
   inRange(uint256, i + 42)

creates
   uint z := i + 42
   A a := new A(i)

transition foo()

iff
   CALLVALUE == 0

updates
  a := new A(42)
